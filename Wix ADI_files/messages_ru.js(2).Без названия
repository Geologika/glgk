"use strict";

try {
    angular.module("organizeMediaTranslations");
} catch (e) {
    angular.module("organizeMediaTranslations", [ "pascalprecht.translate" ]);
}

angular.module("organizeMediaTranslations").config([ "$translateProvider", function($translateProvider) {
    var translations = {
        "change-clipart": {
            button: "Change clipart"
        },
        "change-shape": {
            button: "Change shape"
        },
        "search-bar": {
            placeholder: "Введите ключевое слово или фразу"
        },
        "Search-other-videos": {
            button: "Search other videos"
        },
        "from-vimeo": {
            title: "Vimeo"
        },
        "search-video": {
            text: "Найдите видео на {{ source }}",
            "no-results": "Нет такого видео. Попробуйте другое ключевое слово."
        },
        "video-box": {
            "play-settings": {
                controls: {
                    options: {
                        always: "Всегда",
                        "on-hover": "При наведении",
                        never: "Никогда"
                    },
                    title: "When are controls shown?"
                },
                loop: "In a loop",
                autoplay: "Автопроигрывание",
                title: "How does your video play?"
            }
        },
        "media-settings": {
            "media-title": {
                title: "Название (Аlt-текст)"
            },
            types: {
                images: "Images"
            },
            "link-label": "Ссылка",
            "image-settings": {
                title: "Настройка фотографии"
            },
            "description-placeholder": "Опишите изображение",
            description: {
                title: "Описание"
            },
            "title-placeholder": "Укажите название здесь",
            preview: "Просмотр"
        },
        search: {
            from: "Источник:",
            title: "Поиск видео"
        },
        "from-youtube": {
            title: "YouTube"
        },
        general: {
            "add-more-button": "Добавить еще",
            "cancel-button": "Отменить",
            "no-link-hover": "Подключить",
            "add-button": "Добавить",
            "save-button": "Save",
            "no-link": "Без ссылки",
            "done-button": "Готово",
            "search-button": "Найти"
        }
    };
    $translateProvider.translations("ru", translations);
    $translateProvider.translations(translations);
    if ($translateProvider.preferredLanguage) {
        $translateProvider.preferredLanguage("ru");
    }
} ]).value("preferredLanguage", "ru");